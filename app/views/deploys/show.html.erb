<ol class="breadcrumb">
  <li><%= link_to 'Deploys', deploys_path %></li>
  <li>Deploy #<%= @deploy.id %></li>
</ol>


<%= deploy_poll_tag do %>
  <div class="page-header">
    <div class="pull-right">
      <h3><%= render "status", deploy: @deploy %></h3>
    </div>

    <h1>Deploy #<%= @deploy.id %> <small><%= revision_link @project, @deploy.revision, truncate: true %></small></h1>
  </div>

  <div class="media">
    <div class="pull-left">
      <%= avatar_img(@commit.author.email) %>
    </div>
    <div class="media-body">
      <h4 class="media-heading">

        <span class="author">
          <%= @commit.author.name %>
        </span>

        <span class='date small'>
          <%= l @commit.author_date, format: :long %>
        </span>
      </h4>

      <div class="well">
        <%= simple_format @commit.message %>
      </div>
    </div>
  </div>



  <section id="results">
    <h3>Output</h3>
    <div class="well">
      <%= simple_format @deploy.output %>
    </div>
  </section>
<% end %>
