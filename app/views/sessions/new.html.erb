<section id="login" class="col-md-4 col-md-offset-4">
  <div class="page-header">
    <h1>Login</h1>
  </div>

  <%= simple_form_for :session, url: session_path, html: { class: 'form-horizontal' }, method: 'post' do |f| %>
    <div class="form-group">
      <%= f.input :email %>
    </div>

    <div class="form-group">
      <%= f.input :password %>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>
</section>