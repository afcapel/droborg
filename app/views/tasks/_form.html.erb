<%= simple_form_for [@task.project, @task], remote: true do |f| %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.input :parallelizable, label: "Can be run in parallel?" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.input :command, as: :string %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.input :after_success, as: :string %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.input :after_failure, as: :string %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
